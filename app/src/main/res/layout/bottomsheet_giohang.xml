<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ga_rang_muoi"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            >
            <TextView
                android:id= "@+id/tvt_monan_gio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gà rang muối "
                android:textSize="24sp"
                android:textStyle="bold"
                />
            <TextView
                android:id= "@+id/tvt_gia_gio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160.000VNĐ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_marginHorizontal="5dp"
                        />
                    <EditText
                        android:id= "@+id/edt_soluong_gio"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_marginHorizontal="5dp"
                        android:inputType="number"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:layout_marginHorizontal="5dp"

                        />

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <Button
            android:id="@+id/huybo_bottomsheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huỷ bỏ"
            android:layout_weight="1"
            android:backgroundTint="#54B5C1CC"

            android:layout_marginHorizontal="10dp"
            />
        <Button
            android:id="@+id/themhang_bottomsheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ hàng"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            />
    </LinearLayout>

</LinearLayout>